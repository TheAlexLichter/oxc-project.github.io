{
  "name": "website",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "vitepress dev",
    "build": "vitepress build",
    "preview": "vitepress preview",
    "fmt": "prettier",
    "textlint": "textlint 'src/**/*.md'",
    "textlint:check": "pnpm run textlint",
    "textlint:fix": "pnpm run textlint --fix",
    "typecheck": "tsc",
    "create-blog-post": "tsx ./cli/index.ts create-blog-post"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.2",
    "vitepress": "1.1.4",
    "vue": "^3.4.14"
  },
  "devDependencies": {
    "@types/node": "^20.11.4",
    "citty": "^0.1.5",
    "consola": "^3.2.3",
    "husky": "^9.0.0",
    "lint-staged": "15.2.2",
    "prettier": "4.0.0-alpha.8",
    "textlint": "^14.0.0",
    "textlint-rule-doubled-spaces": "^1.0.2",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-terminology": "^5.0.0",
    "tsx": "^4.7.0",
    "typescript": "~5.4.0"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,mts,css,md,json,yml}": "pnpm run fmt --write",
    "*.md": "textlint"
  },
  "engines": {
    "node": ">=18.0"
  },
  "packageManager": "pnpm@9.0.6"
}
